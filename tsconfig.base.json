{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "allowJs": false,
    "paths": {
      "@ptg-angular-app/*": ["apps/ptg-angular-app/src/app/*"],
      "@ptg-ptg-angular-doc-process/*": [
        "apps/ptg-angular-doc-process/src/app/*"
      ],
      "@ptg-react-app/*": ["apps/ptg-react-app/src/app/*"],
      "@ptg-ui-library/ptg-react": ["libs/ptg-react/src/index.ts"],
      "@ptg-ui-library/web-components": ["dist/libs/web-components"],
      "@ptg-ui-library/web-components-angular": [
        "libs/web-components-angular/src/index.ts"
      ],
      "@ptg-ui-library/web-components-react": [
        "libs/web-components-react/src/index.ts"
      ],
      "@ptg-ui-library/web-components/*": [
        "dist/libs/web-components/dist/components/*"
      ],
      "@ptg-ui-library/web-components/loader": [
        "dist/libs/web-components/loader"
      ],
      "@ptg-ui/*": ["./*"],
      "@ptg-ui/angular": ["libs/ptg-ui-angular-lib/index.ts"],
      "@ptg-ui/angular/*": ["libs/ptg-ui-angular-lib/*"],
      "@ptg-ui/angular/accordian": [
        "libs/ptg-ui-angular-lib/accordian/index.ts"
      ],
      "@ptg-ui/angular/alert": ["libs/ptg-ui-angular-lib/alert/index.ts"],
      "@ptg-ui/angular/button": ["libs/ptg-ui-angular-lib/button/index.ts"],
      "@ptg-ui/angular/calendar": ["libs/ptg-ui-angular-lib/calendar/index.ts"],
      "@ptg-ui/angular/charts": ["libs/ptg-ui-angular-lib/charts/index.ts"],
      "@ptg-ui/angular/checks": ["libs/ptg-ui-angular-lib/checks/index.ts"],
      "@ptg-ui/angular/file-downloads": [
        "libs/ptg-ui-angular-lib/file-downloads/index.ts"
      ],
      "@ptg-ui/angular/indeterminate-checkboxes": [
        "libs/ptg-ui-angular-lib/indeterminate-checkboxes/index.ts"
      ],
      "@ptg-ui/angular/input": ["libs/ptg-ui-angular-lib/input/index.ts"],
      "@ptg-ui/angular/loading": ["libs/ptg-ui-angular-lib/loading/index.ts"],
      "@ptg-ui/angular/pipes": ["libs/ptg-ui-angular-lib/pipes/index.ts"],
      "@ptg-ui/angular/radio": ["libs/ptg-ui-angular-lib/radio/index.ts"],
      "@ptg-ui/angular/select": ["libs/ptg-ui-angular-lib/select/index.ts"],
      "@ptg-ui/angular/sidenav": ["libs/ptg-ui-angular-lib/sidenav/index.ts"],
      "@ptg-ui/angular/textarea": ["libs/ptg-ui-angular-lib/textarea/index.ts"],
      "@ptg-ui/angular/toasts": ["libs/ptg-ui-angular-lib/toasts/index.ts"],
      "@ptg-ui/react": ["libs/ptg-ui-react-lib/src/index.ts"],
      "@ptg-ui/web-components": ["dist/libs/web-components"],
      "@ptg-ui/web-components-angular": [
        "libs/web-components-angular/src/index.ts"
      ],
      "@ptg-ui/web-components-react": [
        "libs/web-components-react/src/index.ts"
      ],
      "@ptg-ui/web-components/loader": ["dist/libs/web-components/loader"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
